<!-- Big Calendar Stuff -->
<script>
    $(document).ready(function () {
        $('#sidebar').fullCalendar({header: {left: 'title',center: '',right: 'prev,next'}});

        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay,listWeek'
            },
            navLinks: true,
            editable: true,
            selectable: true,
            events: "/getEvents",
            select: function (start, end, allDay) {
                var title = prompt("Enter new Title");

                if (title) {
                    var start = $.fullCalendar.formatDate(start, "YYYY-MM-DD HH:mm:ss");
                    var end = $.fullCalendar.formatDate(end, "YYYY-MM-DD HH:mm:ss");
                    $.ajax({
                        url: "/saveEvent",
                        type: "post",
                        data: { title: title, start: start, end: end },
                        success: function () {
                            alert("Added Successfully");
                            $('#calendar').fullCalendar('renderEvent', {
                                title: title,
                                start: start,
                                end: end
                            });
                        }
                    })
                }
            },
            eventClick: function (calEvent, jsEvent, view, resourceObj) {
                swal.fire({
                    title: calEvent.title,
                    html: "Start From : " + moment(calEvent.start).format("MMMM Do YYYY, h:mm a") +
                        "<br /><br />End From : " + moment(calEvent.end).format("MMMM Do YYYY, h:mm a"),
                    showCancelButton: true,
                    cancelButtonText: "Deleting?",
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Editing?'
                }).then((editOption) => {
                    if (editOption.value) {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            cancelButtonText: "No, Don't Edit",
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, Edit it!'
                        })
                    } else {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            cancelButtonText: "No, Don't Delete",
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, Delete it!'
                        })
                    }
                })
            }
        });
    });
</script>
