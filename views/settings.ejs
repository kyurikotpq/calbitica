<%# The Settings Page %>
<% 
    let styles = ["css/settings.css", "css/nav.css", "css/footer.css"],
        title = "Settings",
        beforeJS = [
            {
                src: "/js/settings.js"
            }
        ];
%>
<%- include partials/header.ejs %>
<div id="container">
    <main>
        <section id="habitica-settings">
            <h2>Habitica Settings</h2>
            <div class="form-group">
                <label for="userID">User ID</label>
                <input type="text" id="userID" name="userID" class="form-control"
                value="<%= habiticaID %>">
            </div>
            <div class="form-group">
                <label for="apiKey">API Key</label>
                <input type="password" id="apiKey" name="apiKey" class="form-control">
            </div>
            <button class="btn btn-primary" id="saveSettings">Save Habitica Settings</button>
        </section>
        <section id="google-settings">
            <h2>Google Settings</h2>
        </section>
    </main>
</div>
<%- include partials/footer.ejs %>